---
import BaseLayout from "../layouts/BaseLayout.astro";
import NotFoundPage from "../components/NotFoundPage.astro";
import { getSite } from "../data/site";

const site = getSite("ru");
const title = "404 — Страница не найдена";
const description = "Запрошенная страница не найдена.";
---

<BaseLayout
  title={title}
  description={description}
  locale={site.locale}
  ogImage={site.meta.ogImage}
  url={`${site.meta.url}/404`}
>
  <NotFoundPage site={site} />
</BaseLayout>

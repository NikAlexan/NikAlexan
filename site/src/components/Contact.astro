const getIconPath = (label) => iconPaths[label] ?? iconPaths.LinkedIn;
---

<section id="contact" class="section-pad">
  <div class="max-wrap grid gap-10 lg:grid-cols-[0.9fr_1.1fr]">
    <div class="reveal space-y-4">
      <h2 class="text-3xl font-semibold">{contact.title}</h2>
      <p class="text-base text-black/70">{contact.blurb}</p>
      <div class="flex flex-wrap gap-3">
        {contact.socials.map((social) => (
          <a
            class="btn btn-secondary h-12 w-12 justify-center p-0"
            href={social.href}
            target="_blank"
            rel="noreferrer"
            aria-label={social.label}
            title={social.label}
          >
            <svg width="22" height="22" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path d={getIconPath(social.label)} />
            </svg>
            <span class="sr-only">{social.label}</span>
          </a>
        ))}
      </div>
    </div>
  </div>
</section>

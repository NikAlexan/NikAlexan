---
const { hero } = Astro.props;
---

<section id="hero" class="relative pb-20 pt-32 md:pt-40">
  <div class="grid gap-12 lg:grid-cols-[1.1fr_0.9fr] lg:items-center">
    <div class="space-y-8">
      <div class="mono inline-flex items-center gap-3 border border-[color:rgb(var(--color-accent)/0.25)] bg-[color:rgb(var(--color-accent)/0.08)] px-3 py-1 text-[10px] uppercase tracking-[0.35em] text-[rgb(var(--color-accent))]" data-hero-item>
        <span class="h-2 w-2 rounded-sm bg-[rgb(var(--color-accent))] shadow-[0_0_6px_rgba(217,119,6,0.5)]"></span>
        {hero.tagline}
      </div>
      <h1 class="text-[12vw] font-light leading-[0.85] tracking-tight text-[rgb(var(--color-ink))] md:text-[7rem]" data-hero-item>
        {hero.name.split(" ")[0]}
        <br />
        <span class="text-stroke text-[color:rgb(var(--color-ink)/0.4)]">{hero.name.split(" ").slice(1).join(" ")}</span>
      </h1>
      <p class="max-w-xl text-lg text-[rgb(var(--color-muted))]" data-hero-item>
        {hero.description}
      </p>
      <div class="flex flex-wrap gap-4" data-hero-item>
        <a class="btn btn-primary" href={hero.ctaPrimary.href}>{hero.ctaPrimary.label}</a>
        <a class="btn btn-ghost" href={hero.ctaSecondary.href}>{hero.ctaSecondary.label}</a>
      </div>
      <div class="mono text-[10px] uppercase tracking-[0.3em] text-[rgb(var(--color-muted))]" data-hero-item>
        {hero.note}
      </div>
    </div>
    <div class="relative" data-hero-item>
      <div class="terminal-card p-6 md:p-8">
        <div class="mono mb-4 text-[10px] uppercase tracking-[0.28em] text-[rgb(var(--color-muted))]">
          {hero.cardKicker}
        </div>
        <h2 class="text-2xl font-light text-[rgb(var(--color-ink))]">{hero.cardTitle}</h2>
        <p class="mt-4 text-sm text-[rgb(var(--color-muted))]">{hero.cardText}</p>
        <div class="mt-6 flex flex-wrap gap-2">
          {hero.cardChips.map((chip) => (
            <span class="chip">{chip}</span>
          ))}
        </div>
      </div>
      <div class="absolute -right-6 -top-6 hidden h-24 w-24 rounded-full border border-[color:rgb(var(--color-accent)/0.2)] blur-[1px] md:block"></div>
    </div>
  </div>
</section>

---
const { hero } = Astro.props;
---

<section class="section-pad relative overflow-hidden">
  <div class="max-wrap relative z-10">
    <div class="grid gap-10 lg:grid-cols-[1.2fr_0.8fr] lg:items-center">
      <div class="space-y-6">
        <p class="text-xs uppercase tracking-[0.3em] text-black/50">{hero.tagline}</p>
        <h1 class="text-4xl font-semibold leading-tight sm:text-5xl lg:text-6xl">
          {hero.name}
        </h1>
        <p class="max-w-xl text-base text-black/70 sm:text-lg">
          {hero.description}
        </p>
        <div class="flex flex-wrap gap-4">
          <a class="btn btn-primary" href={hero.ctaPrimary.href}>{hero.ctaPrimary.label}</a>
          <a class="btn btn-secondary" href={hero.ctaSecondary.href}>{hero.ctaSecondary.label}</a>
        </div>
        <p class="text-sm text-black/50">{hero.note}</p>
      </div>
      <div class="relative">
        <div class="card card-hover relative overflow-hidden">
          <div class="mb-4 text-xs uppercase tracking-[0.3em] text-black/40">{hero.cardKicker}</div>
          <h2 class="text-2xl font-semibold">{hero.cardTitle}</h2>
          <p class="mt-4 text-sm text-black/60">{hero.cardText}</p>
          <div class="mt-6 flex flex-wrap gap-2">
            {hero.cardChips.map((chip) => (
              <span class="chip">{chip}</span>
            ))}
          </div>
        </div>
        <div class="absolute -bottom-10 -right-8 hidden h-32 w-32 rounded-full bg-[rgb(var(--color-accent-2))]/20 blur-2xl lg:block"></div>
      </div>
    </div>
  </div>
  <div class="pointer-events-none absolute -top-20 right-0 h-64 w-64 rounded-full bg-[rgb(var(--color-accent))]/20 blur-3xl"></div>
</section>

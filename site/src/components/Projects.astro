---
const { projects } = Astro.props;
---

<section id="projects" class="section-pad">
  <div class="max-wrap">
    <div class="reveal">
      <h2 class="text-3xl font-semibold">{projects.title}</h2>
    </div>
    <div class="mt-8 grid gap-6 lg:grid-cols-3">
      {projects.items.map((project) => (
        <div class="card card-hover reveal flex flex-col">
          <h3 class="text-xl font-semibold">{project.title}</h3>
          <p class="mt-3 text-sm text-black/60">{project.description}</p>
          <div class="mt-4 flex flex-wrap gap-2">
            {project.stack.map((item) => (
              <span class="chip">{item}</span>
            ))}
          </div>
          {project.links && project.links.length > 0 && (
            <div class="mt-6 flex flex-wrap gap-3">
              {project.links.map((link) => (
                <a class="btn btn-secondary text-xs" href={link.href} target="_blank" rel="noreferrer">
                  {link.label}
                </a>
              ))}
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>

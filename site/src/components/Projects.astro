---
const { projects } = Astro.props;
---

<section id="projects" class="scroll-mt-28 pb-20 pt-8">
  <div class="flex flex-col gap-10">
    <div class="flex flex-col gap-4">
      <div class="mono text-[10px] uppercase tracking-[0.35em] text-[rgb(var(--color-muted))]">
        01 // {projects.title}
      </div>
      {projects.caseStudy && (
        <div class="terminal-card reveal p-6 md:p-8">
          <div class="mono mb-3 text-[10px] uppercase tracking-[0.3em] text-[rgb(var(--color-accent))]">
            {projects.caseStudy.kicker}
          </div>
          <div class="flex flex-col gap-6 md:flex-row md:items-center md:justify-between">
            <div>
              <h3 class="text-3xl font-light text-[rgb(var(--color-ink))]">{projects.caseStudy.title}</h3>
              <p class="mt-3 text-sm text-[rgb(var(--color-muted))]">{projects.caseStudy.summary}</p>
            </div>
            <a class="btn btn-primary" href={projects.caseStudy.href}>
              {projects.caseStudy.ctaLabel}
            </a>
          </div>
        </div>
      )}
    </div>
    <div class="grid gap-6 lg:grid-cols-3">
      {projects.items.map((project) => (
        <article class="terminal-card reveal p-6">
          <h4 class="text-lg font-medium text-[rgb(var(--color-ink))]">{project.title}</h4>
          <p class="mt-3 text-sm text-[rgb(var(--color-muted))]">{project.description}</p>
          <div class="mt-4 flex flex-wrap gap-2">
            {project.stack.map((item) => (
              <span class="chip">{item}</span>
            ))}
          </div>
          {project.links && project.links.length > 0 && (
            <div class="mt-5 flex flex-wrap gap-3">
              {project.links.map((link) => (
                <a class="btn btn-ghost" href={link.href} target="_blank" rel="noreferrer">
                  {link.label}
                </a>
              ))}
            </div>
          )}
        </article>
      ))}
    </div>
  </div>
</section>

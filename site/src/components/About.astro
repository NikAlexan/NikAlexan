---
const { about } = Astro.props;
---

<section id="about" class="section-pad">
  <div class="max-wrap reveal grid gap-10 lg:grid-cols-[1.1fr_0.9fr]">
    <div class="space-y-4">
      <h2 class="text-3xl font-semibold">{about.title}</h2>
      <p class="text-base text-black/70">{about.body}</p>
      <ul class="mt-4 grid gap-2 text-sm text-black/70">
        {about.bullets.map((item) => (
          <li class="flex items-center gap-2">
            <span class="h-2 w-2 rounded-full bg-[rgb(var(--color-accent))]"></span>
            <span>{item}</span>
          </li>
        ))}
      </ul>
    </div>
    <div class="card card-hover">
      <h3 class="text-xl font-semibold">Tech stack</h3>
      <div class="mt-4 flex flex-wrap gap-2">
        {about.stack.map((item) => (
          <span class="chip">{item}</span>
        ))}
      </div>
    </div>
  </div>
</section>

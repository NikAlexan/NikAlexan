---
const { homeHref, links, locale } = Astro.props;
const altLocale = locale === "ru" ? "en" : "ru";
const altHref = locale === "ru" ? "/en" : "/";
---

<nav class="fixed top-0 left-0 w-full z-50 flex justify-between items-center px-8 py-6 mix-blend-normal bg-background-dark/80 backdrop-blur-md border-b border-soft md:bg-transparent md:backdrop-blur-none md:border-none">
  <a class="flex items-center gap-3 font-mono text-xs hover:text-ochre transition-colors group text-ink/60" href={homeHref}>
    <div class="w-6 h-6 border border-ink/20 flex items-center justify-center group-hover:border-ochre transition-colors">
      <span class="material-symbols-outlined text-[14px]">grid_view</span>
    </div>
    <span class="tracking-widest uppercase">Index</span>
  </a>
  <div class="hidden md:flex items-center gap-8">
    <div class="flex gap-8 font-mono text-[10px] text-ink/50 tracking-widest border-r border-soft pr-8">
      <span>LATENCY: 12ms</span>
      <span class="text-emerald-500/80 uppercase">Secure_Connection</span>
      <span>SYS: ONLINE</span>
    </div>
    <div class="flex items-center gap-6">
      <div class="flex items-center font-mono text-[10px] tracking-wider">
        <a class={locale === "ru" ? "text-ochre font-bold" : "text-ink/50 hover:text-ochre transition-colors"} href="/">RU</a>
        <span class="mx-2 text-ink/30">/</span>
        <a class={locale === "en" ? "text-ochre font-bold" : "text-ink/50 hover:text-ochre transition-colors"} href="/en">EN</a>
      </div>
      <button
        aria-label="Toggle Theme"
        class="theme-toggle w-8 h-8 border border-bronze/20 bg-surface/40 flex items-center justify-center text-bronze transition-all duration-300 rounded-sm group"
        data-theme-toggle
      >
        <span class="material-symbols-outlined text-[16px] theme-light group-hover:text-cream">dark_mode</span>
        <span class="material-symbols-outlined text-[16px] theme-dark group-hover:text-cream">light_mode</span>
      </button>
    </div>
  </div>
  <div class="flex items-center gap-4 md:hidden">
    <a class="font-mono text-[10px] text-ochre font-bold border border-ink/20 px-2 py-1 rounded" href={altHref}>
      {altLocale.toUpperCase()}
    </a>
    <button class="w-6 h-6 border border-ink/20 text-ink/60 flex items-center justify-center" data-menu-toggle aria-label="Open menu">
      <span class="material-symbols-outlined text-[14px]">menu</span>
    </button>
  </div>
</nav>

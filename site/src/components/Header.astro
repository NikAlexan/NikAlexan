---
const { logo, homeHref, links, cta } = Astro.props;
---

<header class="sticky top-0 z-50 border-b border-black/5 bg-[rgb(var(--color-bg))]/80 backdrop-blur">
  <div class="max-wrap flex items-center justify-between gap-6 px-6 py-4 sm:px-10">
    <a href={homeHref} class="text-sm font-semibold tracking-wide text-black/80">
      {logo}
    </a>
    <nav class="hidden items-center gap-6 text-sm font-medium text-black/70 md:flex">
      {links.map((link) => (
        <a class="transition hover:text-black" href={link.href}>{link.label}</a>
      ))}
    </nav>
    <div class="hidden md:flex">
      <a class="btn btn-primary" href={cta.href}>{cta.label}</a>
    </div>
    <button
      class="md:hidden"
      type="button"
      aria-label="Toggle menu"
      data-menu-toggle
    >
      <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M4 7h16M4 12h16M4 17h16" />
      </svg>
    </button>
  </div>
  <div class="md:hidden" data-menu hidden>
    <div class="flex flex-col gap-4 border-t border-black/5 bg-white px-6 py-6">
      {links.map((link) => (
        <a class="text-sm font-medium text-black/80" href={link.href}>{link.label}</a>
      ))}
      <a class="btn btn-primary w-full" href={cta.href}>{cta.label}</a>
    </div>
  </div>
  <script is:inline>
    const toggle = document.querySelector("[data-menu-toggle]");
    const menu = document.querySelector("[data-menu]");

    if (toggle && menu) {
      toggle.addEventListener("click", () => {
        menu.toggleAttribute("hidden");
      });
    }
  </script>
</header>
